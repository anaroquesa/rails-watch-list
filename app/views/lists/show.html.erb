<h1> <%= @list.name %> </h1>

<div class="container">
      <div class="row d-flex justify-content-center my-3">
        <div class="row col-4"><% @list.bookmarks.each do |bookmark| %>
            <%= image_tag(bookmark.movie.poster_url) %>
          <div class="d-flex justify-content-between my-3">
            <%= bookmark.movie.title %>
            <%= link_to 'x',  list_bookmark_path(@list, bookmark), data: { turbo_method: :delete }  %>
          </div>
          <% end %>
          </div>
      </div>

  <div class="d-flex mt-2">
    <button class="btn btn-dark col"><%= link_to 'ALL LISTS', lists_path %></button>
    <button class="btn btn-success"><%= link_to 'CREATE BOOKMARK',  new_list_bookmark_path(@list) %></button>
  </div>
</div>
